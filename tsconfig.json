{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
		"experimentalDecorators": true,
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "Schema/*" : ["./src/Schema/*"],
            "Macro"    : ["./src/Macro"],
			"@src/*"   : ["./src/*"],
			"@/*"      : ["./*"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.js"],
    "exclude": ["./node_modules/**/*"]
}
